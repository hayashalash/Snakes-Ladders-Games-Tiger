<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="525.0" prefWidth="852.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.difficultyController">
   <children>
      <ImageView fitHeight="595.0" fitWidth="852.0">
         <image>
            <Image url="@../img/screens/difficultyBack.jpg" />
         </image>
      </ImageView>
      <HBox layoutX="87.0" layoutY="247.0" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="easyButton" mnemonicParsing="false" onAction="#selectEasy" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="140.0" fitWidth="210.0">
                     <image>
                        <Image url="@../img/icons/easy.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="normalButton" mnemonicParsing="false" onAction="#selectNormal" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="140.0" fitWidth="210.0">
                     <image>
                        <Image url="@../img/icons/normal.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="hardButton" mnemonicParsing="false" onAction="#selectHard" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="140.0" fitWidth="210.0">
                     <image>
                        <Image url="@../img/icons/hard.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <Button fx:id="closeButton" layoutX="799.0" layoutY="27.0" mnemonicParsing="false" onAction="#closeStage" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0">
               <image>
                  <Image url="@../img/icons/X.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="homeButton" layoutX="736.0" layoutY="65.0" mnemonicParsing="false" onAction="#goHome" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0">
               <image>
                  <Image url="@../img/icons/home.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
