<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.difficultyStage">
    <children>
        <ImageView fitHeight="595.0" fitWidth="852.0">
            <image>
                <Image url="@../img/screens/difficultyBack.jpg"/>
            </image>
        </ImageView>
        <Pane prefHeight="595.0" prefWidth="852.0">
            <children>
                <Button fx:id="closeButton" layoutX="800.0" layoutY="10.0" mnemonicParsing="false" onAction="#closeStage" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0">
                            <image>
                                <Image url="@../img/icons/X.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="homeButton" layoutX="700.0" layoutY="100.0" mnemonicParsing="false" onAction="#goHome" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0">
                            <image>
                                <Image url="@../img/icons/home.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="easyButton" layoutX="100.0" layoutY="230.0" mnemonicParsing="false" onAction="#selectEasy" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="140.0" fitWidth="210.0">
                            <image>
                                <Image url="@../img/icons/easy.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="normalButton" layoutX="320.0" layoutY="230.0" mnemonicParsing="false" onAction="#selectNormal" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="140.0" fitWidth="210.0">
                            <image>
                                <Image url="@../img/icons/normal.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="hardButton" layoutX="540.0" layoutY="230.0" mnemonicParsing="false" onAction="#selectHard" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="140.0" fitWidth="210.0">
                            <image>
                                <Image url="@../img/icons/hard.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </Pane>
    </children>
</StackPane>
