<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="595.0" prefWidth="852.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.historyController">
   <children>
      <ImageView fitHeight="595.0" fitWidth="852.0">
         <image>
            <Image url="@../img/screens/historyBack.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="History" layoutX="172.0" layoutY="185.0" prefHeight="250.0" prefWidth="535.0" style="-fx-background-color: #FFEFD5;">
         <columns>
            <TableColumn fx:id="gameID" prefWidth="103.0" style="-fx-background-color: #FFDAB9;" text="Game ID" />
            <TableColumn fx:id="difficulty" prefWidth="166.0" style="-fx-background-color: #FFDAB9;" text="Difficulty" />
            <TableColumn fx:id="winner" prefWidth="134.0" style="-fx-background-color: #FFDAB9;" text="Winner" />
            <TableColumn fx:id="duration" prefWidth="180.0" style="-fx-background-color: #FFDAB9;" text="Duration" />
         </columns>
      </TableView>
      <Button fx:id="homeButton" layoutX="730.0" layoutY="65.0" mnemonicParsing="false" onAction="#home" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="730.0" layoutY="65.0" style="-fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 3 , 0 );">
               <image>
                  <Image url="@../img/icons/home.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="exitButton" accessibleText="exit" layoutX="800.0" layoutY="10.0" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" style="-fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 3 , 0 );">
               <image>
                  <Image url="@../img/icons/X.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ScrollBar layoutX="158.0" layoutY="185.0" orientation="VERTICAL" prefHeight="250.0" prefWidth="14.0" style="-fx-background-color: #FFEFD5;" />
      <CheckBox fx:id="winnerCheck" layoutX="252.0" layoutY="160.0" mnemonicParsing="false" onAction="#OrderWinner" text="Order By Winner">
         <font>
            <Font name="Aharoni Bold" size="13.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="durationCheck" layoutX="473.0" layoutY="160.0" mnemonicParsing="false" onAction="#OrderDuration" text="Order By Duration">
         <font>
            <Font name="Aharoni Bold" size="13.0" />
         </font>
      </CheckBox>
      <Button fx:id="topButton" layoutX="396.0" layoutY="444.0" mnemonicParsing="false" onAction="#ShowTopThree" prefHeight="25.0" prefWidth="88.0" style="-fx-background-color: #FAFAD2; -fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 3 , 0 );" text="Top Three">
         <font>
            <Font name="Baskerville Old Face" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
