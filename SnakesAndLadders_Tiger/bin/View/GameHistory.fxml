<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="595.0" prefWidth="852.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.historyController">
   <children>
      <ImageView fitHeight="595.0" fitWidth="852.0">
         <image>
            <Image url="@../img/screens/historyBack.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="History" layoutX="120.0" layoutY="185.0" prefHeight="250.0" prefWidth="612.0" style="-fx-background-color: #FFEFD5;">
         <columns>
            <TableColumn fx:id="gameID" prefWidth="103.0" style="-fx-background-color: #FFDAB9;" text="Game ID" />
            <TableColumn fx:id="difficulty" prefWidth="128.0" style="-fx-background-color: #FFDAB9;" text="Difficulty" />
            <TableColumn fx:id="winner" prefWidth="152.0" style="-fx-background-color: #FFDAB9;" text="Winner" />
            <TableColumn fx:id="duration" prefWidth="110.0" style="-fx-background-color: #FFDAB9;" text="Duration" />
            <TableColumn fx:id="date" prefWidth="118.0" style="-fx-background-color: #FFDAB9;" text="Date" />
         </columns>
      </TableView>
      <Button fx:id="homeButton" layoutX="730.0" layoutY="65.0" mnemonicParsing="false" onAction="#home" onMouseEntered="#entered" onMouseExited="#exited" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="730.0" layoutY="65.0" style="-fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 3 , 0 );">
               <image>
                  <Image url="@../img/icons/home.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="exitButton" accessibleText="exit" layoutX="800.0" layoutY="10.0" mnemonicParsing="false" onAction="#exit" onMouseEntered="#entered" onMouseExited="#exited" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" style="-fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 3 , 0 );">
               <image>
                  <Image url="@../img/icons/X.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <CheckBox fx:id="winnerCheck" layoutX="142.0" layoutY="160.0" mnemonicParsing="false" onAction="#OrderWinner" text=" Winner">
         <font>
            <Font name="Aharoni Bold" size="13.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="durationCheck" layoutX="303.0" layoutY="160.0" mnemonicParsing="false" onAction="#OrderDuration" text="Duration">
         <font>
            <Font name="Aharoni Bold" size="13.0" />
         </font>
      </CheckBox>
      <Button fx:id="topButton" layoutX="396.0" layoutY="444.0" mnemonicParsing="false" onAction="#ShowTopThree" onMouseEntered="#entered" onMouseExited="#exited" prefHeight="25.0" prefWidth="88.0" style="-fx-background-color: #FAFAD2; -fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 3 , 0 );" text="Top Three">
         <font>
            <Font name="Baskerville Old Face" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <CheckBox fx:id="DifficultyCheck" layoutX="605.0" layoutY="161.0" mnemonicParsing="false" onAction="#OrderDifficulty" text=" Difficulty">
         <font>
            <Font name="Aharoni Bold" size="13.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="DateCheck" layoutX="468.0" layoutY="160.0" mnemonicParsing="false" onAction="#OrderDate" text="Date">
         <font>
            <Font name="Aharoni Bold" size="13.0" />
         </font>
      </CheckBox>
   </children>
</AnchorPane>
